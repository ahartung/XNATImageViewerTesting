function scrollSlider(args){
  
  this.parent = (!args["parent"]) ? document.body: args["parent"];
  this.id = (!args["id"]) ? "genericScrollSlider": args["id"];
   
  var sS = document.createElement("div");
  sS.setAttribute("id", this.id);
  sS.className = "ui-widget ui-widget-header ui-corner-all";
  this.parent.appendChild(sS);
  
  sC = document.createElement("div");
  sC.setAttribute("id", this.id + "_scrollContent");
  //sC.className = "scroll-content";
  sS.appendChild(sC);
  
  var numFrames = (args["contents"])? args["contents"].length: 20;
  for (var i=0;i<numFrames;i++){
  	var c = document.createElement("img");
  	c.setAttribute("id",   sC.getAttribute("id") + "_scrollContentImage" + i.toString());
  	//c.className = "scroll-content-item ui-widget-header";
  	c.className = "ui-widget-header";
  	c.innerHTML = i.toString();
  	c.src = args["contents"][i];
  	sC.appendChild(c);
  }

  sB = document.createElement("div");
  sB.setAttribute("id",   this.id + "_scrollBar");
  sB.className = "ui-widget-content ui-corner-bottom";
  sS.appendChild(sB);
  
  sBb = document.createElement("div");
  sBb.setAttribute("id",   sB.getAttribute("id") + "_scrollBarb");
  sBb.className = "scroll-bar";
  sB.appendChild(sBb);
  
  // the total scrollSlider
  var style_sS = {
  	"border-radius": "0px",
  	"overflow": "auto",
    "overflow-x": "hidden",
    "overflow-y": "hidden",
  	"width": "700px",
  	"float": "left",
  }

  // the content holder
  var style_sC = {
  	"border-radius": "0px",
  	"width": "2900px",
  	"float": "left",
  	"background-color": "rgba(1,1,1,1)",
  };
  
  // the thumbnails or "content items"
  var style_sFrames = {
  	"border-radius": "0px",
  	"width": "80px",
  	"height": "80px",
  	"float" : "left",
  	"margin" : "10px",
  	"border-color" : "rgba(50, 50, 50, 1)"
  }
  
  var style_uiSlider = { 
  	"background": "none", 
  	"border":"0", 
  	"height": "2em", 
  	"margin": "0 auto",
  }
  
  var style_uiHandleHelperParent = { 
  	"position": "relative", 
  	"width": "100%", 
  	"height": "100%",
  	"margin": "0 auto", 
  }  
  
  var style_uiIcon = { 
  	"border-radius" : "0px",
  	"margin": "-8px auto 0", 
  	"position": "relative", 
  	"top": "50%", 
	
  }
  var style_uiSliderHandle = { 
  	"top":".2em", 
  	"height": "6.5em" 
  };
  style_uiSliderHandle = mergeArgs(style_uiIcon, style_uiSliderHandle)
      
  $('.ui-slider').css(style_uiSlider); 
  $('.ui-handle-helper-parent').css(style_uiHandleHelperParent);
  $('.ui-slider-handle').css(style_uiSliderHandle);
  $('.ui-icon').css(style_uiIcon);

  var scrollbar_wrap  = { 
  	"clear": "left",
  	"padding": "0 4px 0 2px",
  	"margin": "0 -1px -1px -1px",
  }
  scrollbar_wrap = mergeArgs(style_uiSlider, scrollbar_wrap);
  scrollbar_wrap = mergeArgs(style_uiSliderHandle, scrollbar_wrap);
  scrollbar_wrap = mergeArgs(style_uiHandleHelperParent, scrollbar_wrap);
  $('.scroll-bar-wrap').css(scrollbar_wrap);
    
  $(sS).css(style_sS);
  $(sC).css(style_sC);
  $('[id^=' + sC.getAttribute("id") + "_scrollContentImage" + "]").css(style_sFrames);
    $(sB).css(scrollbar_wrap);
    
  /*
  //.scroll-pane { overflow: auto; width: 200px; float:left; }
  //.scroll-content { width: 2900px; float: left; }
  //.scroll-content-item { width: 100px; height: 100px; float: left; margin: 10px; font-size: 3em; line-height: 96px; text-align: center; }
 // .scroll-bar-wrap { clear: left; padding: 0 4px 0 2px; margin: 0 -1px -1px -1px; }
  //.scroll-bar-wrap .ui-slider { background: none; border:0; height: 2em; margin: 0 auto;  }
  //.scroll-bar-wrap .ui-handle-helper-parent { position: relative; width: 100%; height: 100%; margin: 0 auto; }
  //.scroll-bar-wrap .ui-slider-handle { top:.2em; height: 1.5em; }
  //.scroll-bar-wrap .ui-slider-handle .ui-icon { margin: -8px auto 0; position: relative; top: 50%; }
  */
 
   $("<style type='text/css'> .redbold{ color:#f00; font-weight:bold;} </style>").appendTo("head");
}